<h3>Login</h3>
<%= form_with url: sessions_path do |f| %>
  <%= f.label :name, class: "col-sm-2 col-form-label"%>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :password, class: "col-sm-2 col-form-label"%>
  <%= f.password_field :password, class: "form-control" %>
  <br>
  <%= f.submit "Sign in", class: "btn btn-outline-primary" %>
  <span class="ms-3"> Are you new here?</span>
  <%= link_to "Sign up", new_user_path, class: "btn btn-outline-info" %>
<% end %>