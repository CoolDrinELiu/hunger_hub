<div class="modal-dialog modal-xl">
  <div class="modal-content">
    <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
    <div class="modal-body text-center pb-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0"><%= @food.name %></h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <%= image_tag @food.logo.url, class: "img-fluid rounded mb-5" %>
            <p class="mb-4"><%= @food.desc %></p>
            <%= form_for @sub do |f| %>
              <%= f.hidden_field :food_id, value: @food.id %>
              <%= f.label :qty, "Qty", class: "col-sm-2 col-form-label"%>
              <%= f.text_field :qty, class: "form-control w-25 m-auto text-center" %>
              <br>
              <%= f.submit "Subscribe!", class: "btn btn-outline-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>